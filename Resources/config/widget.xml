<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit.widget.strategy.blog_recent_posts.class">SymEdit\Bundle\CoreBundle\Widget\Strategy\RecentPostsStrategy</parameter>
        <parameter key="symedit.widget.strategy.blog_popular_posts.class">SymEdit\Bundle\CoreBundle\Widget\Strategy\PopularPostsStrategy</parameter>
        <parameter key="symedit.widget.strategy.blog_categories.class">SymEdit\Bundle\CoreBundle\Widget\Strategy\BlogCategoriesStrategy</parameter>
    </parameters>

    <services>
        <service id="symedit.widget.strategy.blog_recent_posts" class="%symedit.widget.strategy.blog_recent_posts.class%">
            <argument type="service" id="symedit.repository.post" />
            <tag name="symedit.widget_strategy" alias="blog_recent_posts" />
        </service>

        <service id="symedit.widget.strategy.blog_popular_posts" class="%symedit.widget.strategy.blog_popular_posts.class%">
            <argument type="service" id="symedit.repository.post" />
            <tag name="symedit.widget_strategy" alias="blog_popular_posts" />
        </service>

        <service id="symedit.widget.strategy.blog_categories" class="%symedit.widget.strategy.blog_categories.class%">
            <argument type="service" id="symedit.repository.category" />
            <tag name="symedit.widget_strategy" alias="blog_categories" />
        </service>
    </services>
</container>