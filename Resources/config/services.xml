<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="symedit_blog.event_listener.post_published.class">SymEdit\Bundle\BlogBundle\EventListener\PostPublishedListener</parameter>
    </parameters>

    <services>
        <service id="symedit_blog.event_listener.post_published" class="%symedit_blog.event_listener.post_published.class%">
            <tag name="kernel.event_listener" event="symedit.post.pre_create" method="onPostCreate" />
        </service>
    </services>
</container>
