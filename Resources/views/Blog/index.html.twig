{% extends '@SymEdit/Blog/base.html.twig' %}

{% block blog_title %}
{{ parent() }}
<a href="{{ path('blog_rss') }}"><img src="{{ asset('/bundles/symedit/img/social/rss.png') }}" alt="{{ Page.tagline }} - RSS Feed"></a>
{% endblock %}

{% block meta %}
{{ parent() }}
<link href="{{ url('blog_rss') }}" rel="alternate" type="application/rss+xml" title="{{ block('title') }}">
{% endblock %}

{% block blog_content %}
    {{ parent() }}

    {% block blog_pagination %}
        {% if posts.haveToPaginate %}
            <div class="text-center">
                <div class="paginator">
                    {% block blog_pager %}
                        {{ pagerfanta(posts, null, {'routeName': 'blog_archive'}) }}
                    {% endblock %}
                </div>
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
